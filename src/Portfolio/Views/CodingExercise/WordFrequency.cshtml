
@{
    ViewBag.Title = "WordFrequency";
}

<h2>WordFrequency</h2>

<h4>Directions:</h4>
<p>Write a function wordFreq() that displays a frequency listing of the words contained in a selected text
file. Order the words by frequency.</p>
<input type="file" id="input" />
<div id="result"></div>
<div id="display"></div>
@section scripts {
    <script>
        $(function () {
            var input = $('#input');
            var output = $('#display');
            var result = $('#result');
            var text = "";
            var array;
            var dict = {};
            var listKeysValues = "";
            var reader = new FileReader();
            reader.onload = function (evt) {
                output.text("");
                result.text("");
                output.text(evt.target.result);
                text = evt.target.result;
                text = text.replace(/\//g, " ");
                text = text.replace(/\\/g, " ");
                text = text.replace(/--/g, " ");
                text = text.replace(/ -/g, " ");
                text = text.replace(/- /g, " ");
                text = text.replace("{", " ");
                text = text.replace("}", " ");
                text = text.replace("=", " ");
                text = text.replace("^", " ");
                text = text.replace("[", " ");
                text = text.replace("]", " ");
                text = text.replace("^", " ");
                text = text.replace(/[.,?#*&%$;<>"+:!,)_/(\s,]/g, " ");
                array = text.split(/\s+/);
                for (var i = 0; i < array.length; i++) {
                    var elementFirst = array[i].charAt(0);
                    var elementLast = array[i].charAt(array[i].length - 1);
                    if (elementFirst === "'") {
                        array[i] = array[i].replace(elementFirst, "");
                    }
                    else if (elementLast === "'") {
                        array[i] = array[i].replace(elementLast, "");
                    }
                    array[i] = array[i].toLowerCase();
                }
                for (var i = 0; i < array.length; i++) {
                    if(array[i] in dict) {
                        dict[array[i]] += 1;
                    }
                    else {
                        dict[array[i]] = 1;
                    }
                }
                /*array = [];
                for (var word in dict) {
                    array.push([word, dict[word]]);
                }
                array.sort(function (a, b) { a[1] - b[1] });
                result.text(array);*/
                result.text(JSON.stringify(dict, null, 4));
            };
            input.change(function (evt) {
                var file = evt.target.files[0];
                reader.readAsText(file);
            });
        });
    </script>
}