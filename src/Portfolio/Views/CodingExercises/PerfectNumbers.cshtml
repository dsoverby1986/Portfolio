
@{
    ViewBag.Title = "Perfect Numbers";
}

<!-- *****************************************************************************************************************
     BLUE WRAP
     ***************************************************************************************************************** -->
<div id="blue">
    <div class="container">
        <div class="row">
            <h3>Perfect Numbers</h3>
        </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /blue -->
<!-- *****************************************************************************************************************
 TITLE & CONTENT
 ***************************************************************************************************************** -->
<div class="container mt">
    <a class="navbar-right" href="@Url.Action("JavaSCriptExercises","CodingExercises")">JavaScript Exercises</a>
